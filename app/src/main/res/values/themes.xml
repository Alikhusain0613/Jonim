<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Jonim" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/teal_primary</item>
        <item name="colorPrimaryVariant">@color/teal_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_secondary</item>
        <item name="colorSecondaryVariant">@color/teal_secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Additional Material theming for better consistency -->
        <item name="materialButtonStyle">@style/Widget.Jonim.Button</item>
        <item name="android:colorBackground">@color/background</item>
    </style>

    <!-- Custom button style to match the theme -->
    <style name="Widget.Jonim.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/chippy_button</item>
        <item name="android:textColor">@color/white</item>

        <!-- 背景画像を設定 -->
        <item name="android:windowBackground">@drawable/bg_chippy</item>
        <item name="android:colorBackground">@drawable/bg_chippy</item>
    </style>
</resources>